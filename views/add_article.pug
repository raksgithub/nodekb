extends layout
block content
    h1 Add Articles
    form(method='POST', action='/articles/add')
        #form-group
            lable Title:
            input.form-control(name='title', type='text')
        #form-group
            lable Author:
            input.form-control(name='author', type='text')
        #form-group
            lable Body:
            textarea.form-control(name='body', type='text')
        input.btn.btn-primary(type='submit', value='Create')